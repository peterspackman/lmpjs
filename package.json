{
  "name": "@peterspackman/lmpjs",
  "version": "0.1.0",
  "description": "JavaScript/WebAssembly bindings for LAMMPS - Large-scale Atomic/Molecular Massively Parallel Simulator",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./worker": "./dist/lammps-worker.js",
    "./wasm": "./dist/lmp.wasm"
  },
  "files": [
    "dist",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node scripts/build-wrapper.js && npm run sync-examples",
    "sync-examples": "cp dist/lmp.wasm dist/lmp.js dist/lammps-worker.js examples/",
    "build:wasm": "node scripts/build.js",
    "build:wasm:clean": "rm -rf wasm && npm run build:wasm",
    "build:full": "npm run build:wasm && npm run build",
    "clean": "rm -rf dist src/lmp.js src/lmp.wasm",
    "rebuild": "npm run clean && npm run build:full",
    "dev": "vite examples --host",
    "dev:examples": "vite examples --host --open",
    "preview": "npm run build && vite preview examples --host",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lammps/lmpjs.git"
  },
  "keywords": [
    "molecular-dynamics",
    "simulation",
    "lammps",
    "wasm",
    "webassembly",
    "molecular-modeling",
    "scientific-computing",
    "physics-simulation"
  ],
  "author": "LAMMPS Developers",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/lammps/lmpjs/issues"
  },
  "homepage": "https://github.com/lammps/lmpjs#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}